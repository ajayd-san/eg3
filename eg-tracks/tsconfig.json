{
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "build",
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./**/*"
    ]
}